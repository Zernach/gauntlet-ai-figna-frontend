# ========================================
# FIGNA FRONTEND - ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ========================================
# SUPABASE CONFIGURATION
# ========================================
# Get these from your Supabase project settings
# https://app.supabase.com/project/_/settings/api
# IMPORTANT: Only use ANON key here, NEVER the service role key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ========================================
# BACKEND API CONFIGURATION
# ========================================
# Backend API URL (Railway or your deployment)
VITE_API_URL=http://localhost:3001/api

# WebSocket URL (use wss:// for production)
VITE_WS_URL=ws://localhost:3001/ws

# ========================================
# AUTHENTICATION
# ========================================
# Redirect URL for OAuth (should match your domain)
# Leave empty to auto-detect from window.location.origin
VITE_AUTH_REDIRECT_URL=

# ========================================
# ENVIRONMENT
# ========================================
# development, staging, or production
VITE_ENV=development

# ========================================
# FEATURE FLAGS
# ========================================
# Enable voice features
VITE_ENABLE_VOICE=true
# Enable analytics
VITE_ENABLE_ANALYTICS=false

# ========================================
# PRODUCTION URLS (Examples)
# ========================================
# VITE_API_URL=https://your-backend.railway.app
# VITE_WS_URL=wss://your-backend.railway.app/ws
# VITE_AUTH_REDIRECT_URL=https://your-frontend.netlify.app
